{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.lmx",
  "name": "LMX",
  "fileTypes": [
    "lmx"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#style_block"
    },
    {
      "include": "#script_block"
    },
    {
      "include": "#element_block"
    },
    {
      "include": "#tokens"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lmx",
          "match": "//[^\\n]*"
        },
        {
          "name": "comment.block.lmx",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.lmx",
          "begin": "'",
          "end": "'"
        },
        {
          "name": "string.quoted.double.lmx",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.unquoted.raw.lmx",
          "match": "#{3,}(#{0,2}[^#]+|\\n)+#*"
        }
      ]
    },
    "style_block": {
      "begin": "(&?style)\\b\\s*(#[A-Za-z0-9_-]+)?\\s*(\\{)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.style.lmx"
        },
        "2": {
          "name": "entity.other.attribute-name.id.lmx"
        },
        "3": {
          "name": "punctuation.section.braces.begin.lmx"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.lmx"
        }
      },
      "patterns": [
        {
          "include": "#braced_content_ssx"
        },
        {
          "include": "source.ssx"
        }
      ]
    },
    "script_block": {
      "begin": "\\b(script)\\b\\s*(#[A-Za-z0-9_-]+)?\\s*(\\{)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.script.lmx"
        },
        "2": {
          "name": "entity.other.attribute-name.id.lmx"
        },
        "3": {
          "name": "punctuation.section.braces.begin.lmx"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.lmx"
        }
      },
      "patterns": [
        {
          "include": "#braced_content_lms"
        },
        {
          "include": "source.lms"
        }
      ]
    },
    "element_block": {
      "begin": "^\\s*(?=[^\\{]+\\{)",
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.lmx"
        }
      },
      "patterns": [
        {
          "begin": "^\\s*",
          "end": "(?=\\{)",
          "contentName": "meta.selector.lmx",
          "patterns": [
            {
              "include": "#selectors"
            }
          ]
        },
        {
          "name": "punctuation.section.braces.begin.lmx",
          "match": "\\{"
        },
        {
          "include": "#block_content"
        }
      ]
    },
    "block_content": {
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#strings"
        },
        {
          "include": "#style_block"
        },
        {
          "include": "#script_block"
        },
        {
          "include": "#element_block"
        },
        {
          "include": "#content_tokens"
        }
      ]
    },
    "braced_content_ssx": {
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        {
          "include": "#braced_content_ssx"
        },
        {
          "include": "source.ssx"
        }
      ]
    },
    "braced_content_lms": {
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        {
          "include": "#braced_content_lms"
        },
        {
          "include": "source.lms"
        }
      ]
    },
    "tokens": {
      "patterns": [
        {
          "name": "keyword.control.style.lmx",
          "match": "(?:\\bstyle\\b|&style\\b)"
        },
        {
          "name": "keyword.control.script.lmx",
          "match": "\\bscript\\b"
        },
        {
          "name": "entity.name.namespace.lmx",
          "match": "[A-Za-z0-9_\\-]+:"
        },
        {
          "name": "punctuation.section.braces.begin.lmx",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.lmx",
          "match": "\\}"
        },
        {
          "name": "keyword.operator.bang.lmx",
          "match": "!"
        },
        {
          "name": "keyword.operator.combinator.child.lmx",
          "match": ">"
        },
        {
          "name": "string.unquoted.line.lmx",
          "match": "[|*+][^\\n]+"
        },
        {
          "name": "entity.other.attribute-name.lmx",
          "match": "&[A-Za-z0-9_\\-]+"
        },
        {
          "name": "variable.other.inline-attr.lmx",
          "match": "[A-Za-z0-9_\\-]+="
        }
      ]
    },
    "content_tokens": {
      "patterns": [
        {
          "name": "entity.name.namespace.lmx",
          "match": "[A-Za-z0-9_\\-]+:"
        },
        {
          "name": "keyword.operator.bang.lmx",
          "match": "!"
        },
        {
          "name": "keyword.operator.combinator.child.lmx",
          "match": ">"
        },
        {
          "name": "string.unquoted.line.lmx",
          "match": "[|*+][^\\n]+"
        },
        {
          "name": "entity.other.attribute-name.lmx",
          "match": "&[A-Za-z0-9_\\-]+"
        },
        {
          "name": "variable.other.inline-attr.lmx",
          "match": "[A-Za-z0-9_\\-]+="
        }
      ]
    },
    "selectors": {
      "patterns": [
        {
          "name": "entity.name.tag.lmx",
          "match": "\\*|\\b[A-Za-z][A-Za-z0-9_-]*\\b"
        },
        {
          "name": "entity.other.attribute-name.class.lmx",
          "match": "\\.[A-Za-z0-9_-]+"
        },
        {
          "name": "entity.other.attribute-name.id.lmx",
          "match": "#[A-Za-z0-9_-]+"
        },
        {
          "name": "entity.other.attribute-name.pseudo.lmx",
          "match": ":{1,2}[A-Za-z0-9_-]+"
        },
        {
          "name": "variable.parameter.attribute.lmx",
          "match": "\\[[^\\]]+\\]"
        },
        {
          "name": "keyword.operator.combinator.lmx",
          "match": "[>+~]"
        },
        {
          "name": "punctuation.separator.selector.lmx",
          "match": ","
        }
      ]
    }
  }
}
